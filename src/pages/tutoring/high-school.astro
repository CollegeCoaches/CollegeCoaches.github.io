---
import Hero from '~/components/widgets/Hero.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'High School Coursework',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="High School Coursework"
    image={{
      src: 'https://images.unsplash.com/photo-1523240795612-9a054b0db644?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D',
      alt: 'High school students studying around a computer',
    }}
    actions={[
      {
        text: 'Courses We Offer',
        href: '#courses',
      },
    ]}
  >
    <Fragment slot="title"> Excel in High School Classes </Fragment>

    <Fragment slot="subtitle">
      High school is a time to explore your interests and prepare for the future. We offer tutoring in a variety of
      subjects to help you excel in your coursework.
    </Fragment>
  </Hero>

  <Features2
    id="courses"
    title="High School Coursework"
    subtitle="Our tutors are proficient in a variety of subjects and can help you excel in your coursework."
    columns={3}
    tagline="Courses We Offer"
    items={[
      {
        title: 'Art',
        description: 'We offer tutoring in a variety of art subjects, including drawing, painting, and sculpture.',
        icon: 'tabler:palette',
      },
      {
        title: 'Computer Science',
        description:
          'We offer tutoring in a variety of computer science subjects, including programming and web development.',
        icon: 'tabler:cpu',
      },
      {
        title: 'English',
        description:
          'We offer tutoring in all high school English courses, including literature, writing, and grammar.',
        icon: 'tabler:writing',
      },
      {
        title: 'Foreign Language',
        description: 'We offer tutoring in a variety of foreign languages, including Spanish and Chinese.',
        icon: 'tabler:language',
      },
      {
        title: 'Mathematics',
        description:
          'We offer tutoring in a variety of math subjects, including algebra, geometry, trigonometry, and calculus.',
        icon: 'tabler:math-symbols',
      },
      {
        title: 'Science',
        description: 'We offer tutoring in all high school science courses, including biology, chemistry, and physics.',
        icon: 'tabler:atom',
      },
      {
        title: 'Social Studies',
        description:
          'We offer tutoring in a variety of social studies subjects, including history, geography, and government.',
        icon: 'tabler:globe',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Features2>
</Layout>
