---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Contact',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText tagline="Contact Us" title="Let's Connect!" />

  <ContactUs
    id="form"
    title="Email us today!"
    subtitle="Please fill out the following form to request more information about our services. We look forward to hearing from you!"
    inputs={[
      {
        type: 'text',
        name: 'parentFirstName',
        label: 'Parent First Name',
        required: true,
      },
      {
        type: 'text',
        name: 'parentLastName',
        label: 'Parent Last Name',
        required: true,
      },
      {
        type: 'email',
        name: 'parentEmail',
        label: 'Parent Email',
        required: true,
      },
      {
        type: 'tel',
        name: 'parentCell',
        label: 'Parent Cell Phone',
        required: true,
      },
      {
        type: 'text',
        name: 'studentFirstName',
        label: 'Student First Name',
        required: true,
      },
      {
        type: 'text',
        name: 'studentLastName',
        label: 'Student Last Name',
        required: true,
      },
      {
        type: 'email',
        name: 'studentEmail',
        label: 'Student Email',
        required: false,
      },
      {
        type: 'tel',
        name: 'studentCell',
        label: 'Student Cell Phone',
        required: false,
      },
      {
        type: 'text',
        name: 'studentSchool',
        label: 'Student High School',
        required: true,
      },
      {
        type: 'number',
        name: 'studentGradYear',
        label: 'Student Graduation Year',
        required: true,
      },
    ]}
    textarea={{
      label: 'What services are you interested in?',
    }}
    disclaimer={{
      label:
        'By submitting this contact form, you acknowledge and agree to the collection of your personal information.',
    }}
    description="Our team typically responds within 24 business hours."
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="We are here to help!"
    items={[
      {
        title: 'Phone',
        // TODO: Insert phone number here
        description: '+1 (123) 456-7890',
        icon: 'tabler:headset',
      },
      {
        title: 'Email',
        description: 'collegecoacheshs@gmail.com',
        icon: 'tabler:mail',
      },
      {
        title: 'Location',
        description: 'USA',
        icon: 'tabler:map-pin',
      },
    ]}
  />
</Layout>
